                <span>Home</span>
            </a>
            <a href="#" class="link" id="drop">
                <span class="material-icons">dns</span>
                <span>Lists</span>
            </a>
            <a href="#" class="link">
                <span class="material-icons">assignment_turned_in</span>
                <span>Completed List</span>
            </a>
        </div>
        <div class="main-content">
            <table id="event-table" class="display">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Event's name</th>
                        <th>Venue</th>
                        <th>Responsible</th>
                        <th>Start Date</th>
