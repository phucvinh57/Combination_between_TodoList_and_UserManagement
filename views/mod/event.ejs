<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.24/css/jquery.dataTables.min.css">
    <link rel="stylesheet" href="/stylesheets/lists.css">
    <link rel="stylesheet" href="/stylesheets/navigation-bar.css">
    <link rel="stylesheet" href="/stylesheets/sidebar.css">
    <link rel="stylesheet" href="/stylesheets/event.css">
    <title>
        <%= title %>
    </title>
</head>

<body>
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark fixed-top justify-content-between" style="height: 50px;">
        <!-- Navbar content -->
        <div class="navbar-nav" style="margin-top: 7px;">
            <div class="navbar-brand">
                <input type="checkbox" id="check">
                <label for="check" id="sidebar-btn">
                    <i class="fas fa-bars"></i>
                </label>
                Event App
            </div>

        </div>

        <div class="navbar-nav">
            <div class="dropdown">
                <a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="user-btn" data-toggle="dropdown"
                    aria-haspopup="true" aria-expanded="false">
                    <span class="material-icons">account_circle</span>
                    <span style="margin-left: 5px;">Phuc Vinh</span>
                </a>
                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="user-btn">
                    <a class="dropdown-item" href="http://localhost:3000/mod/setting">Setting</a>
                    <form action="/auth/logout" method="POST">
                        <input class="dropdown-item" type="submit" value="Log out">
                    </form>
                </div>
            </div>
        </div>
    </nav>

    <div class="main">
        <div class="sidebar" style="left: -220px;">
            <a href="http://localhost:3000/mod" class="link">
                <span class="material-icons">home</span>
                <span>Home</span>
            </a>
            <a href="http://localhost:3000/mod/lists" class="link" id="drop">
                <span class="material-icons">dns</span>
                <span>Lists</span>
            </a>
            <a href="#" class="link">
                <span class="material-icons">assignment_turned_in</span>
                <span>Completed List</span>
            </a>
        </div>
        <div class="main-content">
            <form id="event-form" action="/create/event" method="POST">
                <div class="event-edit">
                    <input type="button" id="edit" value="Edit">
                    <input type="button" id="delete-event" class="btn btn-danger" value="Delete" style="font-weight: bold;">
                    <input type="button" id="cancel" value="Discard" style="display: none;">
                    <div id="list-at">
                        <span class="material-icons"
                            style="margin-right: 5px; border-right: 1px solid white; padding-right: 5px;">group</span>
                        <span>List of Attendees</span>
                    </div>
                </div>
                <div class="event-header">
                    <label for="event-name">Event Name</label>
                    <input type="text" id="event-name" name="eventname" value="Họp ticklab">
                </div>
                <div class="form-group">
                    <label for="start-time">Start Time</label>
                    <input class="form-control" type="datetime-local" name="startTime" id="start-time" value="2014-01-02T11:42:13">
                </div>
                <div class="form-group">
                    <label for="end-time">End Time</label>
                    <input class="form-control" type="datetime-local" name="endTime" id="end-time" value="2014-01-02T18:42:13">
                </div>
                <div class="form-group">
                    <label for="location">Location</label>
                    <input class="form-control" type="url" name="location" id="location" value="https://goo.gl/maps/riAwtbQshf93ADJg6">
                </div>
                <div class="form-group">
                    <label class="my-1 mr-2" for="inlineFormCustomSelectPref">Preference</label>
                    <select class="custom-select my-1 mr-sm-2" id="inlineFormCustomSelectPref"
                        style="padding: 0 12px;">
                        <option selected>Choose...</option>
                        <option value="1">Team IT</option>
                        <option value="2">Team cơ khí</option>
                        <option value="3">Team điện</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="score">Score</label>
                    <input class="form-control" type="number" name="score" id="score" min="1" max="100" value="15">
                </div>

                <div id="list-attendees">
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="inputGroup-sizing-default">Add Attendees</span>
                        </div>
                        <input class="form-control" type="text" class="form-group" aria-label="Default"
                            aria-describedby="inputGroup-sizing-default" id="member-search">
                    </div>
                    <!--  -->
                    <ul class="list-group"
                        style="overflow-y: scroll; max-height: 180px; margin-bottom: 30px; margin-top: -17px;">
                        <li class="list-group-item person">
                            <span>Nguyễn Phúc Vinh</span>
                            <span class="material-icons">clear</span>
                        </li>
                        <li class="list-group-item person">
                            <span>Nguyễn Phúc Vinh</span>
                            <span class="material-icons">clear</span>
                        </li>
                        <li class="list-group-item person">
                            <span>Nguyễn Phúc Vinh</span>
                            <span class="material-icons">clear</span>
                        </li>
                        <li class="list-group-item person">
                            <span>Nguyễn Phúc Vinh</span>
                            <span class="material-icons">clear</span>
                        </li>
                        <li class="list-group-item person">
                            <span>Nguyễn Phúc Vinh</span>
                            <span class="material-icons">clear</span>
                        </li>
                    </ul>
                </div>
                <div id="list-times">
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text">Recommend times</span>
                        </div>
                        <input type="datetime-local" class="form-control" aria-label="Default"
                            aria-describedby="inputGroup-sizing-default" id="recommendTime">
                        <div class="input-group-append">
                            <button class="btn btn-info" type="button" id="add-time">Add</button>
                        </div>
                    </div>
                    <ul class="list-group" id="list-time"
                        style="overflow-y: scroll; max-height: 180px; margin-bottom: 30px; margin-top: -17px;">
                        <li class="list-group-item time">
                            <span>2021/03/17 08:00</span>
                            <span class="material-icons delete">clear</span>
                        </li>
                        <li class="list-group-item time">
                            <span>2021/03/17 08:00</span>
                            <span class="material-icons delete">clear</span>
                        </li>
                        <li class="list-group-item time">
                            <span>2021/03/17 08:00</span>
                            <span class="material-icons delete">clear</span>
                        </li>
                    </ul>
                </div>
                <div class="form-group">
                    <label for="description" style="font-weight: 600; margin-bottom: -5px;">Description</label>
                    <textarea class="form-control" id="description" rows="6"></textarea>
                </div>
                <div style="display: flex; justify-content: space-between;" id="footer">
                    <div></div>
                    <input type="submit" id="submit" value="Save">
                </div>

            </form>
        </div>
    </div>
    <div class="counting" style="display: none;">
        <div id="counting-title">
            <div style="display: flex; justify-content: flex-start; align-items: center; width: 95%;">
                <span style="font-weight: bold;">Search</span>
                <input type="text" id="search-at">
            </div>
            <span class="material-icons" id="close-counting">close</span>
        </div>
        <ul class="list-group" style="overflow-y: scroll; height: 77%; overflow-x: hidden; margin-bottom: 5px;">
            <li class="list-group-item at">
                <span>Nguyễn Phúc Vinh</span>
                <div class="group-btn-at">
                    <div class="custom-control custom-switch">
                        <input type="checkbox" class="custom-control-input" id="aa1">
                        <label class="custom-control-label" for="aa1"></label>
                    </div>
                </div>
            </li>
            <li class="list-group-item at">
                <span>Vũ Nguyễn Minh Huy</span>
                <div class="group-btn-at">
                    <div class="custom-control custom-switch">
                        <input type="checkbox" class="custom-control-input" id="aa2">
                        <label class="custom-control-label" for="aa2"></label>
                    </div>
                </div>
            </li>
            <li class="list-group-item at">
                <span>Cù Đỗ Thanh Nhân</span>
                <div class="group-btn-at">
                    <div class="custom-control custom-switch">
                        <input type="checkbox" class="custom-control-input" id="aa3">
                        <label class="custom-control-label" for="aa3"></label>
                    </div>
                </div>
            </li>
            <li class="list-group-item at">
                <span>Ngô Minh Hồng Thái</span>
                <div class="group-btn-at">
                    <div class="custom-control custom-switch">
                        <input type="checkbox" class="custom-control-input" id="aa4">
                        <label class="custom-control-label" for="aa4"></label>
                    </div>
                </div>
            </li>
            <li class="list-group-item at">
                <span>Trương Quý Phát</span>
                <div class="group-btn-at">
                    <div class="custom-control custom-switch">
                        <input type="checkbox" class="custom-control-input" id="aa5">
                        <label class="custom-control-label" for="aa5"></label>
                    </div>
                </div>
            </li>
        </ul>
        <div style="display: flex;justify-content: space-between; align-items: center; margin: 0 20px 20px 0;">
            <div></div>
            <input type="submit" name="roll_call" role="button" class="btn btn-info">
        </div>
        
    </div>


    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <script src="/javascripts/sidebar.js"></script>
    <script src="/javascripts/event.js"></script>

    <script>
        var allInput = document.querySelectorAll('.form-group input, .form-group select, .form-group textarea, .ip #recommendTime, #submit, #description');

        var editBtn = document.getElementById('edit');
        var cancelBtn = document.getElementById('cancel');
        var listOfAttendees = document.getElementById('list-at');
        var footer = document.getElementById('footer');
        var counting = document.getElementsByClassName('counting')[0];
        var closeCounting = document.getElementById('close-counting');
        var deleteEventBtn = document.getElementById('delete-event');

        for (let i of allInput) {
            i.disabled = true;
        }
        listOfAttendees.style.display = 'none';
        footer.style.display = 'none';


        editBtn.onclick = function () {
            this.style.display = 'none';
            cancelBtn.style.display = '';
            deleteEventBtn.style.display = 'none';
            footer.style.display = 'flex';
            for (let i of allInput) {
                i.disabled = false;
            }
            listOfAttendees.style.display = '';
        }
        cancelBtn.onclick = function () {
            deleteEventBtn.style.display = '';
            this.style.display = 'none';
            editBtn.style.display = '';
            for (let i of allInput) {
                i.disabled = true;
            }
            listOfAttendees.style.display = 'none';
            footer.style.display = 'none';
        }
        listOfAttendees.onclick = function () {
            counting.style.display = '';
            content.style.filter = 'blur(5px)';
        }
        closeCounting.onclick = function () {
            counting.style.display = 'none';
            content.style.filter = 'blur(0px)';
        }
    </script>

    <script>
        var searchAttendees = document.getElementById('search-at');
        var rmvAtBtns = document.getElementsByClassName('rmv-at');
        for(let i of rmvAtBtns) {
            i.onclick = function() {
                i.parentNode.parentNode.remove();
            }
        }
        searchAttendees.onkeyup = function () {
            var filter, li, a, i, txtValue;
            filter = this.value.toUpperCase();
            filter = removeVietnameseTones(filter);
            li = document.getElementsByClassName('list-group-item at');
            for (i = 0; i < li.length; i++) {
                a = li[i].childNodes[1];
                txtValue = a.textContent || a.innerText;
                txtValue = removeVietnameseTones(txtValue);
                if (txtValue.toUpperCase().indexOf(filter) > -1) {
                    li[i].style.display = "";
                } else {
                    li[i].style.display = "none";
                }
            }
        }
        
    </script>
</body>

</html>