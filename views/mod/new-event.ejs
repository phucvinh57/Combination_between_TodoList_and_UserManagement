<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.24/css/jquery.dataTables.min.css">
    <link rel="stylesheet" href="/stylesheets/lists.css">
    <link rel="stylesheet" href="/stylesheets/navigation-bar.css">
    <link rel="stylesheet" href="/stylesheets/sidebar.css">
    <link rel="stylesheet" href="/stylesheets/event.css">
    <title>
        <%= title %>
    </title>
</head>

<body>
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark fixed-top justify-content-between" style="height: 50px;">
        <!-- Navbar content -->
        <div class="navbar-nav" style="margin-top: 7px;">
            <div class="navbar-brand">
                <input type="checkbox" id="check">
                <label for="check" id="sidebar-btn">
                    <i class="fas fa-bars"></i>
                </label>
                Event App
            </div>

        </div>

        <div class="navbar-nav">
            <div class="dropdown">
                <a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="user-btn" data-toggle="dropdown"
                    aria-haspopup="true" aria-expanded="false">
                    <span class="material-icons">account_circle</span>
                    <span style="margin-left: 5px;"><%= user.name %> </span>
                </a>
                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="user-btn">
                    <a class="dropdown-item" href="http://localhost:3000/admin/setting">Setting</a>
                    <form action="/auth/logout" method="POST">
                        <input class="dropdown-item" type="submit" value="Log out">
                    </form>
                </div>
            </div>
        </div>
    </nav>

    <div class="main">
        <div class="sidebar" style="left: -220px;">
            <a href="http://localhost:3000/mod" class="link">
                <span class="material-icons">home</span>
                <span>Home</span>
            </a>
            <a href="http://localhost:3000/mod/lists" class="link" id="drop">
                <span class="material-icons">dns</span>
                <span>Lists</span>
            </a>
            <a href="#" class="link">
                <span class="material-icons">assignment_turned_in</span>
                <span>Completed List</span>
            </a>
        </div>
        <div class="main-content">
            <form id="event-form">
                <div class="event-header">
                    <label for="event-name">Event Name</label>
                    <input type="text" id="event-name" name="eventname" value="New Event">
                </div>
                <div class="form-group">
                    <label for="start-time">Start Time</label>
                    <input class="form-control" type="datetime-local" name="startTime" id="start-time">
                </div>
                <div class="form-group">
                    <label for="end-time">End Time</label>
                    <input class="form-control" type="datetime-local" name="endTime" id="end-time">
                </div>
                <div class="form-group">
                    <label for="location">Location</label>
                    <input class="form-control" type="url" name="location" id="location">
                </div>
                <div class="form-group">
                    <label class="my-1 mr-2" for="preference">Preference</label>
                    <select class="custom-select my-1 mr-sm-2" id="preference" style="padding: 0 12px;">
                        <option selected>Choose...</option>
                        <option value="Team IT">Team IT</option>
                        <option value="Team cơ khí">Team cơ khí</option>
                        <option value="Team điện">Team điện</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="score">Score</label>
                    <input class="form-control" type="number" name="score" id="score" min="1" max="100">
                </div>

                <div id="list-attendees">
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text">Add Attendees</span>
                        </div>
                        <input class="form-control" type="text" aria-label="Default"
                            aria-describedby="inputGroup-sizing-default" id="member-search">
                    </div>

                    <div id="suggestion" class="list-group">
                        <div class="list-group-item team">
                            <span class="material-icons">groups</span>
                            <span>Team IT</span>
                        </div>
                        <div class="list-group-item team">
                            <span class="material-icons">groups</span>
                            <span>Team Cơ khí</span>
                        </div>
                        <div class="list-group-item team">
                            <span class="material-icons">groups</span>
                            <span>Team Điện</span>
                        </div>
                        <ul class="list-group" id="search-result">
                            <!-- <li class="list-group-item">Nguyễn Phúc Vinh</li> -->
                        </ul>
                    </div>


                    <ul class="list-group" id="list-added"
                        style="overflow-y: scroll; max-height: 180px; margin-bottom: 30px; margin-top: -17px;">
                    </ul>
                </div>

                <div id="list-times">
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text">Recommend times</span>
                        </div>
                        <input type="datetime-local" class="form-control" aria-label="Default"
                            aria-describedby="inputGroup-sizing-default" id="recommendTime">
                        <div class="input-group-append">
                            <button class="btn btn-info" type="button" id="add-time">Add</button>
                        </div>
                    </div>
                    <ul class="list-group" id="list-time"
                        style="overflow-y: scroll; max-height: 180px; margin-bottom: 30px; margin-top: -17px;">
                    </ul>
                </div>
                <div class="form-group">
                    <label for="description" style="font-weight: 600; margin-bottom: -5px;">Description</label>
                    <textarea class="form-control" id="description" rows="6"></textarea>
                </div>
                <div style="display: flex; justify-content: space-between;">
                    <div></div>
                    <input type="button" role="button" id="submit" value="Create">
                </div>
            </form>
        </div>
    </div>


    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <script
        src="https://cdn.jsdelivr.net/gh/xcash/bootstrap-autocomplete@master/dist/latest/bootstrap-autocomplete.min.js"></script>
    <script src="/javascripts/sidebar.js"></script>
    <script src="/javascripts/event.js"></script>

    <script>
        $('.team').hide();
        $('#member-search').keyup(function () {
            $('#search-result').html('');
            var value = $('#member-search').val();
            if (value != '') $('.team').show();
            else $('.team').hide();
            $.get('member-search', {
                    value: value
                },
                function (data) {
                    for (let i of data.members) {
                        $('#search-result').append(`<li class="list-group-item">${i.name}</li>`)
                    }
                    $('#search-result .list-group-item').each(function (index, elem) {
                        elem.addEventListener('click', function () {
                            let newAttendees = document.createElement('li');
                            newAttendees.className = 'list-group-item person-view person';
                            newAttendees.innerHTML = `<span class='att-name'>${data.members[index].name}</span>\n
                            <span style="display:none;" class='att-id'>${data.members[index].ID}</span>\n
                            <span class="material-icons delete">clear</span>\n`;
                            $('#list-added').append(newAttendees);
                            
                            newAttendees.lastElementChild.addEventListener('click', function () {
                                newAttendees.remove();
                            });
                            $('.team').hide();
                            $('#search-result').html('');
                            $('#member-search').val('');
                        });
                    });
                });
        });
        $(window).click(function (event) {
            if (!$(event.target).is('#member-search')) {
                $('.team').hide();
                $('#search-result').html('');
            }
        });
        $('.team').on('click', function () {
            var preference = this.lastElementChild.innerText;
            $.get('get-team', {
                preference: preference
            }, function (data) {
                for (let i of data.attendees) {
                    let newAttendees = document.createElement('li');
                    newAttendees.className = 'list-group-item person-view person';
                    newAttendees.innerHTML = `<span class='att-name'>${i.name}</span>\n
                        <span style="display:none;" class='att-id'>${i.ID}</span>\n
                        <span class="material-icons delete">clear</span>\n`;
                    $('#list-added').append(newAttendees);
                    newAttendees.lastElementChild.addEventListener('click', function () {
                        newAttendees.remove();
                    });
                }
            });
            $('#member-search').val('');
        })
        $('#submit').on('click', function () {
            let name = $('#event-name').val();
            let startTime = $('#start-time').val();
            let endTime = $('#end-time').val();
            let preference = $('#preference').val();
            let location = $('#location').val();
            let score = $('#score').val();
            let description = $('#description').val();
            let attendeesID = [];
            let listTimeRecommend = [];
            $('.att-id').each(function (index, value) {
                attendeesID.push(value.innerHTML);
            });
            $(".time-value").each(function(index, value) {
                listTimeRecommend.push(value.innerHTML);
            });
            let data = {
                name: name,
                startTime: startTime,
                endTime: endTime,
                preference: preference,
                location: location,
                score: score,
                description: description,
                attendeesID: attendeesID,
                listTimeRecommend: listTimeRecommend
            };
            
            $.post('create', {
                    data: JSON.stringify(data)
                },
                function (data) {
                    alert(data.msg);
                    window.location.replace('http://localhost:3000/mod');
                });
        });
    </script>
</body>

</html>