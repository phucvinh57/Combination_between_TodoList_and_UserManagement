<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.24/css/jquery.dataTables.min.css">
    <link rel="stylesheet" href="/stylesheets/lists.css">
    <link rel="stylesheet" href="/stylesheets/navigation-bar.css">
    <link rel="stylesheet" href="/stylesheets/sidebar.css">
    <title>
        <%= title %>
    </title>
</head>

<body>
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark fixed-top justify-content-between" style="height: 50px;">
        <!-- Navbar content -->
        <div class="navbar-nav" style="margin-top: 7px;">
            <div class="navbar-brand">
                <input type="checkbox" id="check">
                <label for="check" id="sidebar-btn">
                    <i class="fas fa-bars"></i>
                </label>
                Event App
            </div>

        </div>
        <div class="navbar-nav">
            <button id="add-item-btn" class="btn btn-success" href="http://localhost:3000/admin/event/create">
                <span style="margin-right: 5px;">New Event</span>
                <span class="material-icons">
                    playlist_add
                </span>
            </button>
        </div>
        <div class="navbar-nav">
            <div class="dropdown">
                <a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="user-btn" data-toggle="dropdown"
                    aria-haspopup="true" aria-expanded="false">
                    <span class="material-icons">account_circle</span>
                    <span style="margin-left: 5px;"><%= user.name %></span>
                </a>
                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="user-btn">
                    <a class="dropdown-item" href="http://localhost:3000/admin/setting">Setting</a>
                    <form action="/auth/logout" method="POST">
                        <input class="dropdown-item" type="submit" value="Log out">
                    </form>
                </div>
            </div>
        </div>
    </nav>

    <div class="main">
        <div class="sidebar" style="left: -220px;">
            <a href="http://localhost:3000/admin" class="link">
                <span class="material-icons">home</span>
                <span>Home</span>
            </a>
            <a href="#" class="link" id="drop">
                <span class="material-icons">dns</span>
                <span>Events</span>
            </a>
            <a href="http://localhost:3000/admin/accounts" class="link" id="drop">
                <span class="material-icons">supervisor_account</span>
                <span>Accounts</span>
            </a>
        </div>
        <div class="main-content">
            <table id="event-table" class="display">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Event's name</th>
                        <th>Venue</th>
                        <th>Responsible</th>
                        <th>Start Date</th>
                        <th>End Date</th>
                        <th>Preference</th>
                    </tr>
                </thead>
                <tbody>
                    <% for(let i = 0; i < event.length; ++i) { %>  
                        <tr>
                            <td><%= event[i].ID %></td>
                            <td><%= event[i].name %></td>
                            <td><%= event[i].location %></td>
                            <td><%= event[i].responsible %></td>
                            <td><%= event[i]['start-time'] %></td>
                            <td><%= event[i]['end-time'] %></td>
                            <td><%= event[i].preference %></td>
                        </tr>
                    <% } %> 
                </tbody>
                <tfoot>
                    <tr>
                        <th>ID</th>
                        <th>Event's name</th>
                        <th>Venue</th>
                        <th>Responsible</th>
                        <th>Start Date</th>
                        <th>End Date</th>
                        <th>Preference</th>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.24/js/jquery.dataTables.min.js"></script>
    <script src="/javascripts/sidebar.js"></script>

    <script>
        var table = $('#event-table').DataTable();
        $('#event-table_wrapper label').css('color', 'white');
        $('#event-table_wrapper input').css('background-color', 'white');
        $('#event-table_wrapper select').css('color', 'black');
        $('#event-table_wrapper select').css('background-color', 'white');
        $('#event-table_info').css('color', 'whitesmoke');
        $('.paginate_button a').css('color', 'white');
        $('#event-table tbody').on('click', 'tr', function () {
            let eventID = table.row(this).data()[0];
            window.location.replace(`http://localhost:3000/admin/event?id=${eventID}`);
        });
        $("#add-item-btn").on('click', function() {
            window.location.replace(`http://localhost:3000/admin/event/create-form`);
        })
    </script>
</body>

</html>