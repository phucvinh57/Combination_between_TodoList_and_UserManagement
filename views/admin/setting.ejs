<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <!-- Add the evo-calendar.css for styling -->
    <link rel="stylesheet" href="/stylesheets/navigation-bar.css">
    <link rel="stylesheet" href="/stylesheets/sidebar.css">
    <link rel="stylesheet" href="/stylesheets/setting.css">

    <title>
        <%= title %>
    </title>
</head>

<body>
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark fixed-top justify-content-between" style="height: 50px;">
        <!-- Navbar content -->
        <div class="navbar-nav" style="margin-top: 7px;">
            <div class="navbar-brand">
                <input type="checkbox" id="check">
                <label for="check" id="sidebar-btn">
                    <i class="fas fa-bars"></i>
                </label>
                Event App
            </div>
        </div>
        <div class="navbar-nav">
            <button id="add-item-btn" class="btn btn-success" href="http://localhost:3000/mod/event/create">
                <span style="margin-right: 5px;">New Event</span>
                <span class="material-icons">
                    playlist_add
                </span>
            </button>
        </div>
        <div class="navbar-nav">
            <div class="dropdown">
                <a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="user-btn" data-toggle="dropdown"
                    aria-haspopup="true" aria-expanded="false">
                    <span class="material-icons">account_circle</span>
                    <span style="margin-left: 5px;"><%= user.name %></span>
                </a>
                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="user-btn">
                    <a class="dropdown-item" href="#">Setting</a>
                    <form action="/auth/logout" method="POST">
                        <input class="dropdown-item" type="submit" value="Log out">
                    </form>
                </div>
            </div>
        </div>
    </nav>

    <div class="main">
        <div class="sidebar" style="left: -220px;">
            <a href="http://localhost:3000/mod" class="link">
                <span class="material-icons">home</span>
                <span>Home</span>
            </a>
            <a href="http://localhost:3000/mod/lists" class="link" id="drop">
                <span class="material-icons">dns</span>
                <span>Lists</span>
            </a>
            <a href="#" class="link">
                <span class="material-icons">assignment_turned_in</span>
                <span>Completed List</span>
            </a>
        </div>
        <div class="main-content">
            <div class="leftbox">
                <nav id="nav">
                    <a href="#" class="tab active">
                        <i class="fa fa-user"></i>
                    </a>
                    <a href="#" class="tab">
                        <i class="fa fa-lock"></i>
                    </a>
                    <a href="#" class="tab">
                        <i class="fa fa-cog"></i>
                    </a>
                </nav>
            </div>
            <div class="rightbox">
                <form class="content" action="/adas">
                    <h1>Personal Info</h1>
                    <label for="name">Phone Number:</label><br>
                    <input type="text" id="name" class="input" value="<%= user['phone-number'] %>">
                    <label for="birthday">Birthday:</label><br>
                    <input type="date" class="input" id="<%= user.birthday %>">
                    <label for="email">Email:</label><br>
                    <input type="email" class="input" id="email" value="<%= user.email %>">
                    <label for="github">Github:</label><br>
                    <input type="url" id="github" class="input" value="<%= user.github %>">
                    <div class="edit-btns" style="margin-top: 50px;">
                        <button type="button" class="btn btn-light">Cancel</button>
                        <button type="submit" class="btn btn-info">Save</button>
                    </div>
                </form>
                <form class="content" style="display: none;">
                    <h1>Change password</h1>
                    <label for="old-password">Confirm your password:</label><br>
                    <input type="password" id="old-password" class="input">
                    <label for="new-password">New password:</label><br>
                    <input type="password" class="input" id="new-password">
                    <label for="retype-password">Retype new password:</label><br>
                    <input type="password" class="input" id="retype-password">
                    <div class="edit-btns" style="margin-top: 133px;">
                        <div></div>
                        <button type="submit" class="btn btn-info">Save</button>
                    </div>
                </form>
                <form class="content" style="display: none;">
                    <div style="color: rgb(11, 104, 104); margin: 20px; padding-right: 20px;">Setting evaluating system here</div>
                </form>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <script src="/javascripts/sidebar.js"></script>
    <script src="/javascripts/setting.js"></script>
    <script>
        var addItemBtn = document.getElementById("add-item-btn");
        addItemBtn.onclick = function() {
            window.location.replace("http://localhost:3000/mod/event/create");
        }
    </script>
</body>

</html>