<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.24/css/jquery.dataTables.min.css">
    <link rel="stylesheet" href="/stylesheets/navigation-bar.css">
    <link rel="stylesheet" href="/stylesheets/lists.css">
    <link rel="stylesheet" href="/stylesheets/sidebar.css">
    <link rel="stylesheet" href="/stylesheets/profile-card.css">

    <title>
        <%= title %>
    </title>
</head>

<body>
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark fixed-top justify-content-between" style="height: 50px;">
        <!-- Navbar content -->
        <div class="navbar-nav" style="margin-top: 7px;">
            <div class="navbar-brand">
                <input type="checkbox" id="check">
                <label for="check" id="sidebar-btn">
                    <i class="fas fa-bars"></i>
                </label>
                Event App
            </div>
        </div>
        
        <div class="navbar-nav">
            <button id="add-item-btn" class="btn btn-success" href="http://localhost:3000/admin/event/create">
                <span style="margin-right: 5px;">New Event</span>
                <span class="material-icons">
                    person_add
                </span>
            </button>
        </div>
        <div class="navbar-nav">
            <div class="dropdown">
                <a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="user-btn" data-toggle="dropdown"
                    aria-haspopup="true" aria-expanded="false">
                    <span class="material-icons">account_circle</span>
                    <span style="margin-left: 5px;"><%= username %></span>
                </a>
                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="user-btn">
                    <a class="dropdown-item" href="http://localhost:3000/admin/setting">Setting</a>
                    <form action="/auth/logout" method="POST">
                        <input class="dropdown-item" type="submit" value="Log out">
                    </form>
                </div>
            </div>
        </div>
    </nav>

    <div class="main">
        <div class="sidebar" style="left: -220px;">
            <a href="http://localhost:3000/admin" class="link">
                <span class="material-icons">home</span>
                <span>Home</span>
            </a>
            <a href="http://localhost:3000/admin/lists" class="link">
                <span class="material-icons">dns</span>
                <span>Events</span>
            </a>
            <a href="#" class="link" id="drop">
                <span class="material-icons">supervisor_account</span>
                <span>Accounts</span>
            </a>

        </div>
        <div class="main-content">
            <!-- To do -->
            <table id="account-table" class="display">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Phone number</th>
                        <th>Preference</th>
                        <th>Role</th>
                    </tr>
                </thead>
                <tbody>
                    <% for( let i=0; i < user.length; i++ ) { %>
                        <tr>
                            <td>
                                <%= user[i].ID %>
                            </td>
                            <td>
                                <%= user[i].name %>
                            </td>
                            <td>
                                <%= user[i]['phone-number'] %>
                            </td>
                            <td>
                                <%= user[i].preference %>
                            </td>
                            <td>
                                <%= user[i].role %>
                            </td>
                        </tr>
                        <% } %>
                </tbody>
                <tfoot>
                    <tr>
                        <th>ID</th>
                        <th>Mame</th>
                        <th>Phone number</th>
                        <th>Preference</th>
                        <th>Role</th>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
    <div id="user-card">
        <div id="left-card">
            <img src="/images/img_avatar.png" alt="Avatar" id="avatar">
            <span id="name"></span>
        </div>
        <div id="right-card">
            <div class="form-group">
                <label for="username">Username:</label>
                <input type="text" class="form-control" id="username" value="Nguyen Phuc Vinh">
            </div>
            <div class="form-group">
                <label for="password">Password:</label>
                <input type="password" class="form-control" id="password" placeholder="******">
            </div>
            <div class="form-group">
                <label for="role">Role</label>
                <select class="form-control" id="role">
                    <option>User</option>
                    <option>Admin</option>
                    <option>Moderator</option>
                </select>
            </div>
            <div id="button">
                <button type="button" class="btn btn-info" id="edit">Edit</button>
                <button type="button" class="btn btn-light" id="discard">Discard</button>
                <button type="button" class="btn btn-info" id="save">Save</button>
            </div>
        </div>
        <span class="material-icons" id="close-card">clear</span>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.24/js/jquery.dataTables.min.js"></script>
    <script src="/javascripts/sidebar.js"></script>

    <script>
        $('#user-card').hide();
        $('#save').hide();
        $('#discard').hide();
        $('.form-group select, .form-group input').prop('disabled', true);
        var table = $('#account-table').DataTable({
            'aoColumnDefs': [{
                'bSortable': false,
                'aTargets': [-1] /* 1st one, start by the right */
            }]
        });
        $('#account-table_wrapper label').css('color', 'white');
        $('#account-table_wrapper input').css('background-color', 'white');
        $('#account-table_wrapper select').css('color', 'black');
        $('#account-table_wrapper select').css('background-color', 'white');
        $('#account-table_info').css('color', 'whitesmoke');
        $('.paginate_button a').css('color', 'white');
        $('#account-table tbody').on('click', 'tr', function () {
            var data = table.row(this).data();
            console.log(data[1]);
            $('#user-card').show();
            $('#name').text(data[1]);
            $('.main-content').css('filter', 'blur(5px)');
        });
        $('#close-card').click(function () {
            $('#user-card').hide();
            $('.main-content').css('filter', 'blur(0px)');
        });
        $('#edit').on('click', function(){
            $('.form-group select, .form-group input').prop('disabled', false);
            $('#discard').show();
            $('#save').show();
            $('#edit').hide()
        });
        $('#discard').on('click', function(){
            $('.form-group select, .form-group input').prop('disabled', true);
            $('#edit').show();
            $('#save').hide();
            $('#discard').hide()
        });
        $('#save').on('click', function() {
            $.post('accounts/edit', {
                    username: $('#username').val(),
                    password: $('#password').val(), 
                    role: $('#role').val()
                }, function(data) {
                    alert(data.msg)
                });
        })

    </script>
</body>

</html>