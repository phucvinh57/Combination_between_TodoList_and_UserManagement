<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.24/css/jquery.dataTables.min.css">
    <link rel="stylesheet" href="/stylesheets/lists.css">
    <link rel="stylesheet" href="/stylesheets/navigation-bar.css">
    <link rel="stylesheet" href="/stylesheets/sidebar.css">
    <link rel="stylesheet" href="/stylesheets/event.css">
    <title>
        <%= title %>
    </title>
</head>

<body>
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark fixed-top justify-content-between" style="height: 50px;">
        <!-- Navbar content -->
        <div class="navbar-nav" style="margin-top: 7px;">
            <div class="navbar-brand">
                <input type="checkbox" id="check">
                <label for="check" id="sidebar-btn">
                    <i class="fas fa-bars"></i>
                </label>
                Event App
            </div>

        </div>

        <div class="navbar-nav">
            <div class="dropdown">
                <a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="user-btn" data-toggle="dropdown"
                    aria-haspopup="true" aria-expanded="false">
                    <span class="material-icons">account_circle</span>
                    <span style="margin-left: 5px;">Phuc Vinh</span>
                </a>
                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="user-btn">
                    <a class="dropdown-item" href="http://localhost:3000/user/setting">Setting</a>
                    <form action="/auth/logout" method="POST">
                        <input class="dropdown-item" type="submit" value="Log out">
                    </form>
                </div>
            </div>
        </div>
    </nav>

    <div class="main">
        <div class="sidebar" style="left: -220px;">
            <a href="http://localhost:3000/user" class="link">
                <span class="material-icons">home</span>
                <span>Home</span>
            </a>
            <a href="http://localhost:3000/user/lists" class="link" id="drop">
                <span class="material-icons">dns</span>
                <span>Lists</span>
            </a>
            <a href="#" class="link">
                <span class="material-icons">assignment_turned_in</span>
                <span>Completed List</span>
            </a>
        </div>
        <div class="main-content">
            <form id="event-form" action="/create/event" method="POST">
                <div class="event-header">
                    <label for="event-name">Event Name</label>
                    <input type="text" id="event-name" name="eventname" value="<%= event.name %> ">
                </div>
                <div class="form-group">
                    <label for="start-time">Start Time</label>
                    <input class="form-control" type="datetime-local" name="startTime" id="start-time" value="<%= event['start-time'] %>">
                </div>
                <div class="form-group">
                    <label for="end-time">End Time</label>
                    <input class="form-control" type="datetime-local" name="endTime" id="end-time" value="<%= event['end-time'] %>">
                </div>
                <div class="form-group">
                    <label for="location">Location</label>
                    <input class="form-control" type="url" name="location" id="location" value="<%= event.location %> ">
                </div>
                <div class="form-group">
                    <label class="my-1 mr-2" for="inlineFormCustomSelectPref">Preference</label>
                    <input class="form-control" type="text" value="<%= event.preference %> ">
                </div>
                <div class="form-group">
                    <label for="score">Score</label>
                    <input class="form-control" type="number" name="score" id="score" min="1" max="100" value="<%= event.score %>">
                </div>

                <div id="list-attendees">
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="inputGroup-sizing-default">List of Attendees</span>
                        </div>
                        <input type="text" class="form-control" aria-label="Default"
                            aria-describedby="inputGroup-sizing-default" id="member-search">
                    </div>
                    <!--  -->
                    <ul class="list-group"
                        style="overflow-y: scroll; max-height: 180px; margin-bottom: 30px; margin-top: -17px;">
                        <li class="list-group-item person-view">
                            <span>Nguyễn Phúc Vinh</span>
                        </li>
                        <li class="list-group-item person-view">
                            <span>Vũ Nguyễn Minh Huy</span>
                        </li>
                        <li class="list-group-item person-view">
                            
                            <span>Trương Quý Phát</span>
                        </li>
                        <li class="list-group-item person-view">
                            <span>Cù Đỗ Thanh Nhân</span>
                        </li>
                        <li class="list-group-item person-view">
                            <span>Ngô Minh Hồng Thái</span>
                        </li>
                    </ul>
                </div>
                <div id="list-times">
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text">Recommend times</span>
                        </div>
                    </div>
                    <ul class="list-group" id="list-time"
                        style="overflow-y: scroll; max-height: 180px; margin-bottom: 30px; margin-top: -17px;">
                        <li class="list-group-item time-view">
                            <input class="form-check-input me-1" type="checkbox" value="" aria-label="...">
                            <span>2021/03/17 08:00</span>
                        </li>
                        <li class="list-group-item time-view">
                            <input class="form-check-input me-1" type="checkbox" value="" aria-label="...">
                            <span>2021/03/17 08:00</span>
                        </li>
                        <li class="list-group-item time-view">
                            <input class="form-check-input me-1" type="checkbox" value="" aria-label="...">
                            <span>2021/03/17 08:00</span>
                        </li>
                    </ul>
                    
                <div class="form-group">
                    <label for="description" style="font-weight: 600; margin-bottom: -5px;">Description</label>
                    <textarea class="form-control" id="description" rows="6"><%= event.description %></textarea>
                </div>
                <div style="display: flex;justify-content: space-between;">
                    <div></div>
                    <button class="btn btn-info" type="button" id="add-time">Submit</button>
                </div>
            </form>
        </div>
    </div>


    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <script src="/javascripts/sidebar.js"></script>
    <script src="/javascripts/event.js"></script>

    <script>
        var allInput = document.querySelectorAll('.form-group input, .form-group select, .form-group textarea, .ip #recommendTime, #submit, #description, #event-name');
        var counting = document.getElementsByClassName('counting')[0];

        for (let i of allInput) {
            i.disabled = true;
            i.style.backgroundColor = '#fff';
        }
    </script>

    <script>
        var searchAttendees = document.getElementById('member-search');

        searchAttendees.onkeyup = function () {
            var filter, li, a, i, txtValue;
            filter = this.value.toUpperCase();
            li = document.getElementsByClassName('list-group-item person-view');
            for (i = 0; i < li.length; i++) {
                a = li[i].childNodes[1];
                console.log(a);
                txtValue = a.textContent || a.innerText;
                txtValue = removeVietnameseTones(txtValue);
                if (txtValue.toUpperCase().indexOf(filter) > -1) {
                    li[i].style.display = "";
                } else {
                    li[i].style.display = "none";
                }
            }
        }

    </script>
</body>

</html>