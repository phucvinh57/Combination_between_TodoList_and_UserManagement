<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <!-- Add the evo-calendar.css for styling -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/evo-calendar@1.1.2/evo-calendar/css/evo-calendar.min.css"/>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/evo-calendar@1.1.3/evo-calendar/css/evo-calendar.midnight-blue.min.css">
    <link rel="stylesheet" href="/stylesheets/navigation-bar.css">
    <link rel="stylesheet" href="/stylesheets/home.css">
    <link rel="stylesheet" href="/stylesheets/sidebar.css">
    <title><%= title %> </title>
</head>
<body>
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark fixed-top justify-content-between" style="height: 50px;">
        <!-- Navbar content -->
        <div class="navbar-nav" style="margin-top: 7px;">
            <div class="navbar-brand">
                <input type="checkbox" id="check">
                <label for="check" id="sidebar-btn" >
                    <i class="fas fa-bars"></i>
                </label>
                Event App
            </div>
        </div>
        
        <div class="navbar-nav">
            <div class="dropdown">
                <a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="user-btn" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <span class="material-icons">account_circle</span>
                    <span style="margin-left: 5px;">Phuc Vinh</span>
                </a>
                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="user-btn">
                    <a class="dropdown-item" href="http://localhost:3000/user/setting">Setting</a>
                    <form action="/auth/logout" method="POST">
                        <input class="dropdown-item" type="submit" value="Log out">
                    </form>
                </div>
            </div>
        </div>
    </nav>

    <div class="main">
        <div class="sidebar" style="left: -220px;">
            <a href="#" class="link">
                <span class="material-icons">home</span>
                <span>Home</span>
            </a>
            <a href="http://localhost:3000/user/lists" class="link" id="drop">
                    <span class="material-icons">dns</span>
                    <span>Lists</span>
                </a>
            <a href="#" class="link">
                <span class="material-icons">assignment_turned_in</span>
                <span>Completed List</span>
            </a>
        </div>
        <div class="main-content">
            <!-- To do -->
            <div id="calendar"></div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/jquery@3.4.1/dist/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <!-- Add the evo-calendar.js for.. obviously, functionality! -->
    <script src="https://cdn.jsdelivr.net/npm/evo-calendar@1.1.2/evo-calendar/js/evo-calendar.min.js"></script>

    <script src="/javascripts/sidebar.js"></script>
    <script>
        $(document).ready(function() {
            $("#calendar").evoCalendar({
                calendarEvents: [
                    {
                        id: 'bHay68s', // Event's ID (required)
                        name: "Họp giao ban", // Event name (required)
                        date: "January/1/2020", // Event date (required)
                        type: "event", // Event type (required)
                        description: "Chuẩn bị trước họp 15p",
                        everyYear: true // Same event every year (optional)
                    },
                    {
                        id: 'zxcasq',
                        name: "Vacation Leave",
                        badge: "04/13 - 04/15", // Event badge (optional)
                        date: ["April/13/2020", "April/15/2020"], // Date range
                        description: "Vacation leaves for 3 days.", // Event description (optional)
                        type: "event",
                        color: "#ff0000", // Event custom color (optional)
                        everyYear: true
                    }
                ]
            });
            $("#calendar").evoCalendar('setTheme', 'Midnight Blue');
            $("#calendar").on('selectEvent', function(event, activeEvent) {
                window.location.href = "http://localhost:3000/user/event";
            });
        });
    </script>
</body>
</html>